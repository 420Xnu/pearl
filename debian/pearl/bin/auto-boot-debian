#!/bin/sh
counter=60
while [ $counter -gt 0 ]; do
    sleep 1 || break
    test -e /interactive && break
    counter=$(($counter - 1))
    echo "will boot Debian in $counter seconds" > /var/help/010-auto-action
done
if [ $counter -gt 0 ]; then
    rm /var/help/010-auto-action
    exit 1
fi
echo "booting Debian" > /var/help/010-auto-action
/bin/boot-debian
